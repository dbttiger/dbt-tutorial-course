{
    // Associated the right file types with the right VSCode extensions
    "files.associations": {
        "*.sql": "jinja-sql",
        "*.sqlfluff": "text"
    },

    // CRUCIAL - you need to change this to terminal.integrated.env.[osx|windows|linux] depdning on your system
    // and point it to the folder where your profiles directory is stored!
    "terminal.integrated.env.osx": {
        "DBT_PROFILES_DIR": "./answers"
    },

    // Automatically trimming whitespace is quite helpful
    "files.trimTrailingWhitespace": true,

    // Personal preference: makes error / changed / new files different colours
    "workbench.colorCustomizations": {
        "list.errorForeground": "#e54135",
        "gitDecoration.modifiedResourceForeground": "#32bed1",
        "gitDecoration.untrackedResourceForeground": "#7dd47a"
    },

    // Personal preference as a previous Pycharm user!
    "workbench.colorTheme": "Darcula from Pycharm (Dark)",

	// Personal preference to use tabs over spaces, feel free to remove or override
	"editor.insertSpaces": false,
    "editor.detectIndentation": false
}